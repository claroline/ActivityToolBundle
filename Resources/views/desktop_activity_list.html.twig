{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block section_content %}

<h3>{{ 'activity_list'|trans({}, 'tools') }}</h3>

{% for workspaceInfo in workspaceInfos %}
<div class="accordion-group">
    <div class="accordion-heading">
        <a  class="accordion-toggle"
            data-toggle="collapse"
            href="#collapse-{{ workspaceInfo.code }}"
        >
            <i class="icon-book"></i>
            {{ workspaceInfo.name }}
            <span class="workspace-code">({{ workspaceInfo.code }})</span>
            <i class="icon-chevron-down pull-right"></i>
        </a>
    </div>
    <div id="collapse-{{ workspaceInfo.code }}" class="accordion-body collapse">
        <div class="accordion-inner">
            <table id="desktop-activity-table" class="table table-striped table-bordered table-condensed">
                <tr>
                    <th nowrap>{{ 'activity'|trans({}, 'tools') }}</th>
                    <th nowrap>{{ 'instructions'|trans({}, 'tools') }}</th>
                    <th nowrap>{{ 'start_date'|trans({}, 'tools') }}</th>
                    <th nowrap>{{ 'end_date'|trans({}, 'tools') }}</th>
                </tr>
                {% for resourceId in workspaceInfo.resources %}
                <tr>
                    <td>
                        <a href="{{ path('claro_resource_open', {'resourceId': resourceId, 'resourceType': 'activity'}) }}">
                        {{ resourceInfos[resourceId].name }}
                        </a>
                    </td>
                    <td>{{ activityInfos[resourceId].instructions }}</td>
                    <td>{{ activityInfos[resourceId].startDate }}</td>
                    <td>{{ activityInfos[resourceId].endDate }}</td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endfor %}

{% endblock %}